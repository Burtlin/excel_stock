@echo off
REM ============================================
REM 股票數據處理器 - 自動執行批次檔
REM ============================================

REM 切換到批次檔所在目錄
cd /d "%~dp0"

echo ========================================
echo 股票數據處理器
echo 執行時間: %date% %time%
echo ========================================
echo.

REM 執行股票處理器
stock_processor.exe

REM 檢查執行結果
if %errorlevel% equ 0 (
    echo.
    echo ========================================
    echo 執行成功！
    echo ========================================
) else (
    echo.
    echo ========================================
    echo 執行失敗！錯誤代碼: %errorlevel%
    echo ========================================
    echo.
    pause
)

REM 記錄執行狀態到日誌
echo [%date% %time%] 執行完成，錯誤代碼: %errorlevel% >> execution.log
